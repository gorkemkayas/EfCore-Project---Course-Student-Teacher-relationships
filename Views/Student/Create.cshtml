@model Student
<h2 class="text-center" style="margin-top: 3%;">Create Profile</h2>
<hr>
<form asp-controller="Student" asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="StudentName" class="form-label">Student Name</label>
        <input asp-for="StudentName" class="form-control">
        <span asp-validation-for="StudentName"></span>

        <label asp-for="StudentSurname" class="form-label">Student Surname</label>
        <input asp-for="StudentSurname" class="form-control">
        <span asp-validation-for="StudentSurname"></span>

        <label asp-for="StudentEmail" class="form-label">Student Email</label>
        <input asp-for="StudentEmail" class="form-control">
        <span asp-validation-for="StudentEmail"></span>

        <label asp-for="StudentPhoneNumber" class="form-label">Student Phone Number</label>
        <input asp-for="StudentPhoneNumber" class="form-control">
        <span asp-validation-for="StudentPhoneNumber"></span>
    </div>
    <button type="submit" class="btn btn-secondary">Save</button>
</form>